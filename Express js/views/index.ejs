<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do Table</title>

    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
        }

        body{
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container{
            background: #fff;
            width: 90%;
            max-width: 900px;
            padding: 30px;
            border-radius: 14px;
            box-shadow: 0 12px 30px rgba(0,0,0,0.25);
        }

        h1{
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

        /* FORM DESIGN */
        form{
            display: grid;
            grid-template-columns: repeat(3, 1fr) auto;
            gap: 10px;
            margin-bottom: 25px;
        }

        input{
            padding: 10px;
            border-radius: 6px;
            border: 1px solid #ccc;
            outline: none;
            font-size: 14px;
        }

        input:focus{
            border-color: #667eea;
        }

        .add{
            padding: 10px 18px;
            border: none;
            border-radius: 6px;
            background: #667eea;
            color: #fff;
            font-size: 15px;
            cursor: pointer;
            transition: 0.3s;
        }

        .add:hover{
            background: #5563c1;
        }

        /* TABLE DESIGN */
        table{
            width: 100%;
            border-collapse: collapse;
        }

        thead{
            background: #667eea;
            color: white;
        }

        th, td{
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        tbody tr:hover{
            background: #f4f6ff;
        }

        /* ACTION BUTTONS */
        .edit{
            background: #38a169;
            color: #fff;
            border: none;
            padding: 6px 12px;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 5px;
        }

        .edit:hover{
            background: #2f855a;
        }

        .delete{
            background: #e53e3e;
            color: #fff;
            border: none;
            padding: 6px 12px;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete:hover{
            background: #c53030;
        }

        a{
            text-decoration: none;
        }

        /* RESPONSIVE */
        @media(max-width: 768px){
            form{
                grid-template-columns: 1fr;
            }

            table, thead, tbody, th, td, tr{
                font-size: 14px;
            }
        }
    </style>
</head>

<body>

<div class="container">
    <h1>To-Do List</h1>

    <form action="/addData" method="post">
        <input type="text" name="name" placeholder="Enter your name" required>
        <input type="email" name="email" placeholder="Enter your email" required>
        <input type="password" name="password" placeholder="Enter your password" required>
        <button class="add">Add</button>
    </form>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% data.map((e,i)=>{ %>
            <tr>
                <td><%= i + 1 %></td>
                <td><%= e.name %></td>
                <td><%= e.email %></td>
                <td><%= e.password %></td>
                <td>
                    <a href="/editData?id=<%= e.id %>">
                        <button class="edit">Edit</button>
                    </a>
                    <a href="/deleteData/<%= e.id %>">
                        <button class="delete">Delete</button>
                    </a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

</div>

</body>
</html>
